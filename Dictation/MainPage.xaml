<Page
    x:Class="Dictation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dictation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Default"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar DefaultLabelPosition="Right" >
            <CommandBar.Content>
                <AppBarButton x:Name="HamburgerButton"
                    FontFamily="Segoe MDL2 Assets"  
                    Content="&#xE700;" Click="HamburgerButton_Click"
                              />
            </CommandBar.Content>
            <AppBarToggleButton x:Name="Microphone" Icon="Microphone" Label="Start Dictation" Click="{x:Bind DocumentLogic.Listening}" />
            <AppBarButton Icon="Library" Label="Vocabulary Training" Tag="vocabulary" Command="{x:Bind Logic.DispalyContent}" CommandParameter="vocabulary"/>
            <AppBarButton Icon="Font" Label="Formating Tools" Tag="tools" Command="{x:Bind Logic.DispalyContent}" CommandParameter="tools"/>
            <AppBarButton Icon="Rename" Label="Find and Replace" Tag="findreplace" Command="{x:Bind Logic.DispalyContent}" CommandParameter="findreplace"/>
            <AppBarButton Icon="Share" Label="Share" Tag="share" Command="{x:Bind Logic.DispalyContent}" CommandParameter="share"/>
            <AppBarButton Icon="Edit" Label="Editing Tools" />
        </CommandBar>


        <SplitView x:Name="splitView" PanePlacement="Right" Grid.Row="1" DisplayMode="Inline" IsPaneOpen="{x:Bind Logic.IsPanelVisible, Mode=TwoWay}" OpenPaneLength="300">

            <SplitView.Content>
                <Grid>
                    <ScrollViewer>
                        <RichEditBox Margin="50" IsSpellCheckEnabled ="True" Background="White" 
                          local:RtfText.RichText="{x:Bind DocumentLogic.Document.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                               ></RichEditBox>
                    </ScrollViewer>
                </Grid>
            </SplitView.Content>

            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock VerticalAlignment="Center" Margin="5" FontSize="20" Text="{x:Bind Logic.Title, Mode=OneWay}"></TextBlock>
                    <Button HorizontalAlignment="Right"  Margin="5" Click="{x:Bind Logic.Close}"
                             FontFamily="Segoe MDL2 Assets" Content="&#xE711;"></Button>
                    <Frame x:Name="ContentFrame" Content="{x:Bind Logic.CurrentPage, Mode=OneWay}" Grid.Row="1"></Frame>
                </Grid>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
