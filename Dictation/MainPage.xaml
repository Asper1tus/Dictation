<Page
    x:Class="Dictation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dictation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Gray"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar >
            <CommandBar.Content>
                <AppBarButton x:Name="HamburgerButton"
                    FontFamily="Segoe MDL2 Assets"  
                    Content="&#xE700;" />
            </CommandBar.Content>
            <AppBarToggleButton x:Name="Microphone" Icon="Microphone" Label="Start Dictation" Click="AppBarToggleButton_Click" />
            <AppBarButton Icon="Library" Label="Vocabulary Training" />
            <AppBarButton Icon="Font" Label="Formating Tools" />
            <AppBarButton Icon="Rename" Label="Find and Replace" />
            <AppBarButton Icon="Share" Label="Share" />
            <AppBarButton Icon="Edit" Label="Editing Tools" />
        </CommandBar>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <RichEditBox x:Name="editor" Margin="50" Grid.Column="0" IsSpellCheckEnabled ="True"  />
        </Grid>
    </Grid>
</Page>
